<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>    
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <nav class="navbar navbar-light bg-faded">

    <!-- Toggle Button -->
    <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#nav-content">
      &#9776;
    </button>
    <!-- Nav Content -->
    <div class="collapse navbar-toggleable-xs" id="nav-content">
      <a class="navbar-brand" href="/"><%= image_tag 'logo-small' %></a>
      <ul class="nav navbar-nav">
        <% if signed_in? %>
            <li class="nav-item">
              <a class="nav-link" href="<%= logout_path %>">Sign Out</a>
            </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_path %>">Sign Up</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= login_path %>">Sign In</a>
          </li>
        <% end %>
        <li class="nav-item">
          <a class="nav-link" href="<%= users_path %>">Browse Profiles</a>
        </li>
      </ul>
    </div>

    <div>
      <h4>Hello, <%= current_user.nil? ? 'Guest' : @user.email %></h4>
    </div>
  </nav>

  <%= flash_messages %>

  <%= yield %>

  <footer class="footer-12">
    <div class="container">
        Made with <%= image_tag('heart') %> in Sai Gon
    </div>
  </footer>    

</body>
</html>
